<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.zipow.videobox.conference.ui.dialog.ZmBaseDashboardWbFragment">

    <TextView
        android:id="@+id/tvTypeName"
        style="@style/ZMTextView.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="@dimen/zm_btn_width_60dp"
        android:paddingStart="@dimen/zm_padding_small_size"
        android:paddingTop="@dimen/zm_padding_smallest_size"
        android:paddingEnd="@dimen/zm_padding_small_size"
        android:paddingBottom="@dimen/zm_padding_smallest_size"
        android:textColor="@color/zm_wb_dashboard_text_color"
        tools:text="@string/zm_dashboard_template_type_all" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/zm_padding_smallest_minus_minus_size"
        android:layout_marginEnd="@dimen/zm_padding_smallest_minus_minus_size"
        android:background="@drawable/zm_wb_dashboard_type_selected" />
</LinearLayout>
