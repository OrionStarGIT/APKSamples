<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/zm_padding_medium_size"
    tools:context="com.zipow.annotate.follow.FollowInviteView"
    android:background="@drawable/zm_wb_follow_invite_item_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/zm_whiteboard_share_item_avatar_size"
        android:layout_height="@dimen/zm_whiteboard_share_item_avatar_size"
        android:layout_marginStart="@dimen/zm_margin_small_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        android:focusable="false"
        tools:src="@drawable/zm_ic_whiteboard_share_avatar_default" />


    <TextView
        android:id="@+id/tvUserName"
        style="@style/ZmTextView.Content.Primary.MediumPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zm_margin_small_size"
        app:layout_constrainedWidth="true"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/tvFollow"
        app:layout_constraintEnd_toStartOf="@+id/ivInviteClose"
        android:layout_marginEnd="@dimen/zm_margin_smaller_size"
        android:gravity="start"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="xxxx xxxx is inviting you to follow" />


    <TextView
        android:id="@+id/tvFollow"
        style="@style/ZmButton.Small.Text"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/zm_margin_smaller_size"
        android:layout_marginTop="@dimen/zm_margin_small_minus_size"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/zm_btn_height_24dp"
        android:text="@string/zm_wb_follow_mode_follw_383781"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvUserName"
        app:layout_constraintStart_toStartOf="@+id/tvUserName"
        app:layout_constraintHorizontal_bias="0"  />

    <ImageView
        android:id="@+id/ivInviteClose"
        android:padding="@dimen/zm_padding_small_size"
        android:contentDescription="@string/zm_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zm_ic_whiteboard_share_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>