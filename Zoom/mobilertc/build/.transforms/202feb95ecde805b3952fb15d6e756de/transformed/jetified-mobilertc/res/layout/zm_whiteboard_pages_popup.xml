<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_whiteboard_common_toolbar_bg"
    android:orientation="vertical"
    android:gravity="center">

    <com.zipow.annotate.popup.pages.PagesView
        android:id="@+id/mPagesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zm_margin_smaller_size"
        android:layout_marginTop="@dimen/zm_margin_smaller_size"
        android:layout_marginEnd="@dimen/zm_margin_smaller_size"
        android:layout_marginBottom="@dimen/zm_margin_smaller_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/zm_margin_smaller_size"
        android:layout_marginEnd="@dimen/zm_margin_smaller_size"
        android:layout_marginBottom="@dimen/zm_margin_smaller_size"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPageIndicator"
            style="@style/ZmTextView.Content.Primary.MediumPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Page 1/2" />

        <TextView
            android:id="@+id/tvCreateTip"
            style="@style/ZmTextView.Content.Primary.MediumPlus.Dimmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zm_whiteboard_accessibility_tips_max_289013" />

    </LinearLayout>
</LinearLayout>