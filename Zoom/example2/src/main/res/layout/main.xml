    <Button
        android:id="@+id/btnTabMeeting"
        android:enabled="false"
        android:layout_marginLeft="640px"
        android:layout_marginTop="75.5px"
        android:layout_width="640px"
        android:layout_height="108px"
        android:textSize="36px"
        android:textFontWeight="500"
        android:gravity="center"
        android:textColor="#ffffff"
        android:lineHeight="50px"
        android:background="@drawable/selector"
        android:text="Initializing..." />

    <LinearLayout
        android:layout_marginTop="32px"
        android:layout_width="1920px"
        android:layout_height="33px"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="490px"
            android:layout_height="33px"
            android:textSize="24px"
            android:textFontWeight="400"
            android:textColor="#222222"
            android:lineHeight="33px"
            android:text="Pressing the button means you agree our" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="176px"
            android:layout_height="33px"
            android:textSize="24px"
            android:textFontWeight="500"
            android:textColor="#0059FF"
            android:lineHeight="33px"
            android:text="Service Policy" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="52px"
            android:layout_height="33px"
            android:textSize="24px"
            android:textFontWeight="400"
            android:textColor="#222222"
            android:lineHeight="33px"
            android:text="and" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="209px"
            android:layout_height="33px"
